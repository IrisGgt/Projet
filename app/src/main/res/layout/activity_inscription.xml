<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imac5.liste.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginVertical="305dp"
            android:text="@string/nom"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginHorizontal="40dp"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginVertical="305dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="250dp"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginVertical="255dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="350dp"
            android:text="@string/birth"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_marginVertical="352dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="390dp"
            android:text="@string/phone"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginVertical="405dp"
            android:background="@color/white" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="200dp"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="60px"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="96dp" />






</android.support.constraint.ConstraintLayout>

